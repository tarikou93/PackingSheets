{% extends "layout.html.twig" %}

{% block title %}Parts{% endblock %}

{% block content %}
<div class="jumbotron vertical-center">
  <div class="container-fluid">
    <div class="container"><h2>Parts <br>
      <small>Edition/Consultation</small></h2>
      <div class="col-md-3 col-md-offset-9">
        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add new part</button>
      </div>
    </div>
    <div id="exTab2" class="container">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#1" data-toggle="tab">Parts</a></li>
        <li><a href="#2" data-toggle="tab">Search</a></li>
      </ul>
      <div class="tab-content ">
        <div class="tab-pane active" id="1">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>
                  <th>Part Number</th>
                  <th>Serial Number</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>HSCode</th>
                  <th>Edit</th>
                  <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              {% for part in parts %}
                <tr>
                    <td>{{ part.pn }}</td>
                    <td>{{ part.serial }}</td>
                    <td>{{ part.desc }}</td>
                    <td>{{ part.price }}</td>
                    <td>{{ part.hscode }}</td>
                    <td><button type="button" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></button></td>
                    <td><button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="tab-pane" id="2">
          <div class="container-fluid">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Search</h3>
                </div>
                <div class="panel-body">
                  <div class="container-fluid">
                    <section class="container">
                		<div class="container-page">
                      <div class="col-md-12">
                				<h3 class="dark-grey">Parts Search Tool</h3>
                				<p><small>
                					Use the matching fields to search a Part using components informations.
                				</small></p>
                        <br>
                			</div>
                      <div class="form-group col-lg-6">
                        <label>Part Number</label>
                        <input type="text" name="" class="form-control" id="pn" value="">
                      </div>

                      <div class="form-group col-lg-6">
                        <label>Serial Number</label>
                        <input type="text" name="" class="form-control" id="sn" value="">
                      </div>

                      <div class="form-group col-lg-12">
                        <label>HSCode</label>
                        <input type="text" name="" class="form-control" id="hs" value="">
                      </div>
                		</div>
                	</section>
                  <div class="form-group">
                      <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Search</button>
                  </div>
                </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endblock %}
