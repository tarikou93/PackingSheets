{% extends "layout.html.twig" %}

{% block title %}Parts{% endblock %}

{% block content %}
    {% if app.session.flashbag.peekAll|length > 0 %}
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="alert alert-{{ type ? type : '' }} fade-in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
    <div class="jumbotron vertical-center">
        <div class="container-fluid">
            <div class="container"><h2>Parts <br>
                    <small>Edition/Consultation</small></h2>
                <div class="col-md-3 col-md-offset-9">
                    <a href="{{ path('part_add') }}"><button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add new part</button></a>
                </div>
            </div>
            <div id="exTab2" class="container">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#1" data-toggle="tab">Parts</a></li>
                    <li><a href="#2" data-toggle="tab">Search</a></li>
                </ul>
                <div class="tab-content ">
                    <div class="tab-pane active" id="1">
                        {% if (parts is empty) %}
                            <div class="panel panel-danger">
                                <div class="panel-heading">Search Results</div>
                                <div class="panel-body">No matching entry found - Please edit filters</div>
                            </div>
                        {% else %}
                            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Part Number</th>
                                        <th>Serial Number</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>HSCode</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for part in parts %}
                                        <tr>
                                            <td>{{ part.pn }}</td>
                                            <td>{{ part.serial }}</td>
                                            <td>{{ part.desc }}</td>
                                            <td>{{ part.price }}</td>
                                            <td>{{ part.hscode }}</td>
                                            <td><a href="{{ path('part_edit', { 'id': part.id }) }}"><button type="button" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil">
                                                        </span></button></a></td>
                                            <td><a href="{{ path('part_delete', { 'id': part.id }) }}"><button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove">
                                                        </span></button></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                    <div class="tab-pane" id="2">
                        <div class="container-fluid">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3>Search</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="container-fluid">
                                        <section class="container">
                                            <div class="container-page">
                                                <form class="form-signin form-horizontal" role="form" action="{{ path('searchParts') }}" method="post">
                                                    <div class="form-group">
                                                        <div class="col-lg-6">
                                                            <label>Part Number</label>
                                                            <input type="text" name="pn" class="form-control" id="pn" value="">
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label>Serial Number</label>
                                                            <input type="text" name="sn" class="form-control" id="sn" value="">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-lg-12">
                                                            <label>HSCode</label>
                                                            <input type="text" name="hscode" class="form-control" id="hscode" value="">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-lg-12">
                                                            <label>Description</label>
                                                            <textarea type="text" name="desc" class="form-control" id="desc" value=""></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Search</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
