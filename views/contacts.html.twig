{% extends "layout.html.twig" %}

{% block title %}Contacts{% endblock %}

{% block content %}
    <div class="jumbotron vertical-center">
        <div class="container-fluid">
            <div class="container"><h2>Contacts <br>
                    <small>Edition/Consultation</small></h2>
                <div class="col-md-3 col-md-offset-9">
                    <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add new contact</button>
                </div>
            </div>
            <div id="exTab2" class="container">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#1" data-toggle="tab">Parts</a></li>
                    <li><a href="#2" data-toggle="tab">Search</a></li>
                </ul>
                <div class="tab-content ">
                    <div class="tab-pane active" id="1">
                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Mail</th>
                                    <th>Phone Number</th>
                                    <th>Fax Number</th>
                                    <th>Address</th>
                                    <th>Company</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for contact in contacts %}
                                    <tr>
                                        <td>{{ contact.name }}</td>
                                        <td>{{ contact.mail }}</td>
                                        <td>{{ contact.phoneNr }}</td>
                                        <td>{{ contact.faxNr }}</td>
                                        {% for address in addresses %}
                                            {% if address.id == contact.address_id.id %}
                                                <td>{{ address.label }}</td>
                                                {% for code in codes %}
                                                    {% if code.id == address.code_id.id%}
                                                        <td>{{ address.code_id.label }}</td>
                                                    {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                        {% endfor %}
                                        <td><button type="button" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></button></td>
                                        <td><button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="2">
                        <div class="container-fluid">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3>Search</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="container-fluid">
                                        <section class="container">
                                            <div class="container-page">
                                                <div class="col-md-12">
                                                    <h3 class="dark-grey">Contacts Search Tool</h3>
                                                    <p><small>
                                                            Use the matching fields to search a Contact using components informations.
                                                        </small></p>
                                                    <br>
                                                </div>
                                                <div class="form-group col-lg-6">
                                                    <label>Name</label>
                                                    <input type="text" name="" class="form-control" id="name" value="">
                                                </div>

                                                <div class="form-group col-lg-6">
                                                    <label>Mail</label>
                                                    <input type="text" name="" class="form-control" id="mail" value="">
                                                </div>

                                                <div class="form-group col-lg-12">
                                                    <label>Phone Number</label>
                                                    <input type="text" name="" class="form-control" id="phone" value="">
                                                </div>
                                                
                                                <div class="form-group col-lg-12">
                                                    <label>Fax Number</label>
                                                    <input type="text" name="" class="form-control" id="fax" value="">
                                                </div>
                                                
                                                <div class="form-group col-lg-12">
                                                    <label>Address</label>
                                                    <input type="text" name="" class="form-control" id="address" value="">
                                                </div>
                                                
                                                <div class="form-group col-lg-12">
                                                    <label>Company </label>
                                                    <input type="text" name="" class="form-control" id="company" value="">
                                                </div>
                                            </div>
                                        </section>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
