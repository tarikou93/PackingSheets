<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/packingsheets.css" rel="stylesheet">
    <title>PackingSheets - {% block title %}{% endblock %}</title>
  </head>
  <body>
    <div class='container'>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">PackingSheets</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="{{ path('sheets') }}">Sheets</a></li>
              <li><a href="#p">Contacts</a></li>
              <li><a href="{{ path('parts') }}">Parts</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#p">Tables</a></li>
              {% if app.session.get('user') != null %}
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span> {{ app.session.get('user')['username'] }} <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                      <li><a href="{{ path('logout') }}">Log out</a></li>
                  </ul>
              </li>
              {% endif %}
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
      <div id="content">{% block content %}{% endblock %}</div>
      <footer class="footer">
        <a href="#"> PackingSheets </a> is in progress. Sabena Aerospace Engineering, 2016.
      </footer>
      <!-- jQuery -->
      <script src="/lib/jquery/jquery.min.js"></script>
        <!-- JavaScript Boostrap plugin -->
        <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
      </div>
    </body>
</html>
