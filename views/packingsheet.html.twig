{% extends "layout.html.twig" %}

{% block title %}Packing Sheets{% endblock %}

{% block content %}
<div class="jumbotron vertical-center">
  <div class="container-fluid">
    <div class="container"><h2>Packing Sheets <br>
      <small>Edition/Consultation</small></h2>
      <div class="col-md-3 col-md-offset-9">
        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Create new sheet</button>
      </div>
    </div>
    <div id="exTab2" class="container">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#1" data-toggle="tab">Sheets</a></li>
        <li><a href="#2" data-toggle="tab">Search</a></li>
      </ul>
      <div class="tab-content ">
        <div class="tab-pane active" id="1">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>
                  <th>Ref</th>
                  <th>AWB Number</th>
                  <th>Shipper</th>
                  <th>Consigned</th>
                  <th>From service</th>
                  <th>Autority</th>
                  <th>Details</th>
                  <th>Edit</th>
                  <th>Delete</th>
                  <th>Print</th>
              </tr>
            </thead>
            <tbody>
              {% for packingSheet in packingSheets %}
                <tr>
                    <td>{{ packingSheet.ref }}</td>
                    <td>{{ packingSheet.AWB }}</td>
                    <td>{{ packingSheet.shipper_id.label}}</td>
                    <td>{{ packingSheet.consignedCode_id.label}}</td>
                    <td>{{ packingSheet.service_id.label }}</td>
                    <td>{{ packingSheet.autority_id.label }}</td>
                    <td><a href="{{ path('sheetDetails', { 'id': packingSheet.id }) }}">
                      <button type="button" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-zoom-in"></span></button></a></td>
                    <td><button type="button" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></button></td>
                    <td><button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button></td>
                    <td><button type="button" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-print"></span></button></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="tab-pane" id="2">
          <div class="container-fluid">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Search</h3>
                </div>
                <div class="panel-body">
                  <div class="container-fluid">
                    <section class="container">
                		<div class="container-page">
                      <div class="col-md-12">
                				<h3 class="dark-grey">PackingSheets Search Tool</h3>
                				<p><small>
                					Use the matching fields to search a PackingSheet using PS informations or Part informations.
                				</small></p>
                        <br>
                			</div>
                			<div class="col-md-6">
          				      <div class="form-group col-lg-12">
                					<label>Reference</label>
                					<input type="text" name="" class="form-control" id="ref" value="">
                				</div>

                				<div class="form-group col-lg-6">
                					<label>AWB</label>
                					<input type="text" name="" class="form-control" id="awb" value="">
                				</div>

                				<div class="form-group col-lg-6">
                					<label>Consigned</label>
                					<input type="text" name="" class="form-control" id="consigned" value="">
                				</div>

                				<div class="form-group col-lg-6">
                					<label>Date Issue</label>
                					<input type="date" name="" class="form-control" id="date" value="">
                				</div>

                				<div class="form-group col-lg-6">
                					<label>Delivery</label>
                					<input type="text" name="" class="form-control" id="delivery" value="">
                				</div>

                				<div class="col-sm-6">
                          <div class="checkbox">
                            <label><input type="checkbox" value="" id="signed">Signed</label>
                          </div>
                				</div>

                				<div class="col-sm-6">
                          <div class="checkbox">
                            <label><input type="checkbox" value="" id="printed">Printed</label>
                          </div>
                				</div>
                			</div>
                      <div class="form-group col-lg-6">
                        <label>Part Number</label>
                        <input type="text" name="" class="form-control" id="pn" value="">
                      </div>

                      <div class="form-group col-lg-6">
                        <label>Serial Number</label>
                        <input type="text" name="" class="form-control" id="sn" value="">
                      </div>

                      <div class="form-group col-lg-6">
                        <label>HSCode</label>
                        <input type="text" name="" class="form-control" id="hs" value="">
                      </div>
                		</div>
                	</section>
                  <div class="form-group">
                      <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Search</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endblock %}
