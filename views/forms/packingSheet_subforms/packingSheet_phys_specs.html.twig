<div class="panel panel-default">
  	<div class="panel-heading"><h4>Physical Specifications</h4></div>
	<div class="panel-body">
		<div class="form-group">
            {{ form_label(packingSheetForm.weight, null, {  'label': 'Weight', 'label_attr':  {
            'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(packingSheetForm.weight) }}
                {{ form_widget(packingSheetForm.weight, {'attr':  {
                'class': 'form-control',
                'readonly': 'readonly'
                }}) }}
            </div>
		</div>
        <div class="form-group">
            {{ form_label(packingSheetForm.totalPrice, null, {  'label': 'Total Price', 'label_attr':  {
            'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(packingSheetForm.totalPrice) }}
                {{ form_widget(packingSheetForm.totalPrice, {'attr':  {
                'class': 'form-control',
                'readonly': 'readonly'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(packingSheetForm.nbrPieces, null, {  'label': 'Nbr Pieces', 'label_attr':  {
            'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(packingSheetForm.nbrPieces) }}
                {{ form_widget(packingSheetForm.nbrPieces, {'attr':  {
                'class': 'form-control',
                'readonly': 'readonly'
                }}) }}
            </div>
        </div> 
	</div>
</div>


